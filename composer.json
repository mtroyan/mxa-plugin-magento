{
    "name": "emailcenter/mxm-plugin-magento2",
    "description": "A plugin to send website subscribe data to Maxautomation by Emailcenter",
    "type": "magento2-module",
    "license": "LGPL-3.0",

    "require": {
        "php": "^5.6 || ^7.0",
        "guzzlehttp/guzzle": "^6.1"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Emailcenter\\Maxautomation\\": "src/"
        }
    },

    "minimum-stability": "beta",
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "magento/community-edition": "~2.1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Emailcenter\\Maxautomation\\": "tests/"
        }
    }
}
